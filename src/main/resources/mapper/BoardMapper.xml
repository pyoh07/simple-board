<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pyoh07.simpleboard.mapper.BoardMapper">

    <resultMap id="BoardResultMap" type="com.pyoh07.simpleboard.domain.Board">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="writer" column="writer"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findAll" resultMap="BoardResultMap">
        SELECT * FROM board ORDER BY created_at DESC
    </select>

    <select id="findById" parameterType="long" resultMap="BoardResultMap">
        SELECT * FROM board WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.pyoh07.simpleboard.domain.Board" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO board (title, content, writer, created_at, updated_at)
        VALUES (#{title}, #{content}, #{writer}, NOW(), NOW())
    </insert>

    <update id="update" parameterType="com.pyoh07.simpleboard.domain.Board">
        UPDATE board
        SET title = #{title}, content = #{content}, updated_at = NOW()
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM board WHERE id = #{id}
    </delete>

</mapper>
